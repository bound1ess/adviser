{
    "main": "bin/adviser",
    "output": "builds/adviser.phar",
    "stub": true,

    "finder": [
        {
            "in": "src",
            "name": "*.php"
        },
        {
            "in": "vendor",
            "name": "*.php",
            "exclude": [
                "phpunit",
                "mockery",
                "sebastian",
                "doctrine"
            ]
        }
    ],
    "files": [
        "README.md",
        "LICENSE",
        "adviser-default.yml"
    ]
}
